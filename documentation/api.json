{
  "swagger": "2.0",
  "info": {
    "title": "Sample API",
    "description": "API description in Markdown.",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/v1",
  "schemes": ["http"],
  "paths": {
    "/": {
      "get": {
        "summary": "Welcome to COMPIUO",
        "description": "Returns a welcome message from the API.",
        "produces": ["text/html"],
        "responses": {
          "200": {
            "description": "App is alive and you can use it",
            "content": {
              "text/html": {
                "example": "<h1>COMPIUO</h1><p>Welcome to COMPIUO</p>"
              }
            }
          }
        }
      }
    }
  }
}
